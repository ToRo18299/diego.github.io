---
import { Plus } from '@lucide/astro'

interface Props {
  title: string
  photo?: string
  Content: any
}

const { title, photo, Content } = Astro.props
---

<section
  id='about'
  class='py-20 px-4 bg-gradient-to-br from-primary/10 to-base-200/80'
>
  <div class='max-w-4xl mx-auto'>
    <div
      class='flex flex-col md:flex-row items-center md:items-stretch gap-8 md:gap-16 bg-base-100 rounded-2xl shadow-xl p-6 md:p-12'
    >
      {
        photo && (
          <figure class='shrink-0 flex justify-center items-center mb-6 md:mb-0'>
            <img
              src={photo}
              alt={title}
              class='rounded-full w-40 h-40 md:w-52 md:h-52 object-cover border-4 border-primary shadow-lg'
            />
          </figure>
        )
      }
      <div class='flex-1 flex flex-col justify-center'>
        <div class='flex items-center gap-3 mb-2'>
          <h2 class='text-4xl md:text-5xl font-extrabold tracking-tight'>
            {title}
          </h2>
        </div>
        <div class='text-lg md:text-xl mb-6 text-base-content/80'>
          <Content />
        </div>
        <div class='flex justify-start mt-auto'>
          <a
            href='https://www.linkedin.com/in/diego-ramos-a09664302'
            target='_blank'
            class='btn btn-primary btn-lg flex items-center gap-2 font-semibold text-lg px-6 py-3 transition-all duration-150 hover:scale-105 hover:shadow-lg'
          >
            <Plus class='size-6' />
            <span>See more</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

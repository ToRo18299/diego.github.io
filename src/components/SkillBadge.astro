---
interface Props {
  name: string
  logoUrl: string
}

const { name, logoUrl } = Astro.props

const colorMap: Record<string, string> = {
  TypeScript: '#3178c6',
  JavaScript: '#f7df1e',
  React: '#61dafb',
  Vite: '#646cff',
  'Node.js': '#339933',
  Python: '#3776ab',
  'Tailwind CSS': '#06b6d4',
  Git: '#f05032',
  GitHub: '#181717',
  Docker: '#2496ed',
  ESP32: '#e7352c',
  Dash: '#1e90ff',
}
const borderColor =
  name in colorMap ? colorMap[name as keyof typeof colorMap] : '#e5e7eb'
---

<span
  class='inline-flex items-center gap-4 px-6 py-3 rounded-full shadow-xl text-lg font-semibold bg-base-100 transition-all duration-200 hover:scale-105 hover:shadow-2xl hover:bg-base-200'
>
  <span
    class='flex items-center justify-center w-12 h-12 rounded-full bg-white shadow-md border'
    style={`border-color: ${borderColor};`}
  >
    <img
      src={logoUrl}
      alt={name + ' logo'}
      class='w-9 h-9 object-contain transition-transform duration-200 group-hover:scale-110'
      loading='lazy'
    />
  </span>
  <span class='drop-shadow-sm'>{name}</span>
</span>
